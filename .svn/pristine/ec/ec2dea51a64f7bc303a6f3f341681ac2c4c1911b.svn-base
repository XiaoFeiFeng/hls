<div class="text-left" ng-controller="userLoginCtrl">
    <div class="row">
        <div class="col-md-2 col-md-offset-1"><a href="http://localhost/shipping"><img src="img/logo.png"
                                                                                       class="yilian"/></a></div>
        <div class="col-md-3 form-title">&emsp;&emsp;欢迎登陆</div>
    </div>
    <br>
    <br>
    <ul class="row">
        <li class="col-md-7"><img src="img/banner1.jpg" style="width:100%;padding-right:30px;"/></li>
        <li class="col-md-4 form-border">
            <div class="fl-bun">
                <a href="http://localhost/shipping/user.html#/user/register" class="btn btn-hls btn-xs">免费注册</a>
            </div>
            <form id="loginForm" name="loginForm">
                <div class="form-group  has-feedback">
                    <label class="control-label " for="inputUser">
                        <small>用户名</small>
                    </label>
                    <input type="text" ng-model="user.name" class="form-control input-lg" id="inputUser"
                           placeholder="请输入用户名"
                           required dir-directive-ext requiredmsg="请输入用户名">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                <div class="form-group has-feedback">
                    <label class="control-label" for="inputPass">
                        <small>登录密码</small>
                    </label>
                    <input type="password" ng-model="user.password" class="form-control input-lg" id="inputPass"
                           placeholder="请输入用户名"
                           required dir-directive-ext requiredmsg="请输入密码">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="text-right">
                    <small><a>忘记密码？</a></small>
                </div>
                <div class="row">
                    <div class="form-group col-md-5">
                        <label class="control-label" for="inputCheckImg">
                            <small>验证码</small>
                        </label>
                        <input id="inputCheckImg" type="text" ng-model="user.checkimg" class="form-control input-lg"
                               required dir-directive-ext
                               requiredmsg="请输入验证码" dir-rangelength="4,4" dirrangelengthmsg="验证码长度为4位">
                    </div>
                    <div class="col-md-7" style="padding: 8px 0 0 0 ;"><br>
                        <img ng-src="{{checkImgSrc}}">
                        <small>看不清？</small>
                        <a href="" ng-click="exchangeImg()">换一张</a>
                    </div>
                </div>
                <div class="row text-center" style="padding: 25px 0" ng-show="error">
                    <span style="color:red;font-weight: bold;" ng-bind="error"></span>
                </div>
                <button type="button" ng-disabled="loginForm.$invalid" ng-click="login()"
                        class="btn btn-hls btn-block btn-lg">登陆
                </button>
            </form>
            <br>
            <br>
            <div>
                <small>
                    第三方登陆：
                    <a href="#" title="QQ登录"><img src="img/icon/QQ.png" width="25" height="25"/></a>
                    <a href="#" title="速卖通登录"><img src="img/icon/Eliexpress.png" width="25" height="25"/></a>
                </small>

            </div>
        </li>

    </ul>
</div>