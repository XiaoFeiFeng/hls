'use strict'
define([], function () {
        var merchantsIndexModule = angular.module("merchantsIndexModule", []);

        merchantsIndexModule.controller('merchantsIndexCtrl', function ($scope, $ui) {
            $("#fileupload").fileinput({
                uploadUrl: 'http://localhost/admin/api/test.php?action=test', //文件上传地址
                uploadAsync: true,
                uploadExtraData: null,
                maxFileCount: 5,
                allowedFileExtensions: ['jpg', 'png', 'gif'],//允许文件后缀名
                overwriteInitial: false,
                maxFileSize: 1000,//单个文件最大值 (KB)
                maxFilesNum: 10, //单次最多上传文件数
                showCaption: false,//是否显示输入框
                showPreview: true,//是否显示预览

                browseClass: "btn btn-success",
                browseLabel: "选择图片",
                browseIcon: "<i class=\"glyphicon glyphicon-picture\"></i> ",
                removeClass: "btn btn-danger",
                removeLabel: "删除",
                removeIcon: "<i class=\"glyphicon glyphicon-trash\"></i> ",
                uploadClass: "btn btn-info",
                uploadLabel: "上传",
                uploadIcon: "<i class=\"glyphicon glyphicon-upload\"></i> ",
                //allowedFileTypes: ['image', 'video', 'flash'], //允许文件的类型
                slugCallback: function (filename) {
                    return filename.replace('(', '_').replace(']', '_');
                }
            });
        });
    }
)