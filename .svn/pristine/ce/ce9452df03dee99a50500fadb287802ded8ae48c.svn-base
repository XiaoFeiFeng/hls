html, body, * {
    /*font-family: "FontAwesome", "Microsoft YaHei" ! important;*/
}
.hls-login{
    height:75px;
    line-height:75px;
}
.hls-login > a {
    color: #000;
    line-height: 55px;
}

.hls-login > a:hover,
.hls-login > a:focus {

    color: #555;
}

.hls-copyright {
    height: 40px;
    line-height: 40px;
    font-family: arial;
}

.hls-botton a {
    font-size: 90%;
    color: #555;
}

.hls-botton a:hover,
.hls-botton a:focus {
    font-size: 90%;
    color: #0c0c0c;
}

.hls-botton ul li {
    font-size: 90%;
}

.hlsAreaPanel {
    width: 460px;
    text-align: center;
    font-family: Microsoft YaHei;
    color: orange;
    /*font-family: SimHei;*/
}

.hlsAreaPanel ul {
    margin: 0;
}

.hlsAreaPanel ul li {
    padding: 1px 1px;
}

.hlsAreaPanel span {
    cursor: pointer;
    padding: 2px 10px;
}

.hlsAreaPanel span:hover {
    color: white;
    background-color: #ff8041;
    font-weight: 300;
}

.hlsAreaTabActive {
    color: #ff8041;
    font-weight: 200;
    border-bottom: 1px solid orange;
}

.hlsAreaTab {
    padding: 10px 2px;
}

.hlsAreaAction {
    color: #ff8041;
    font-weight: 200;
}

/* Dialogs */
.dialog-header-error {
    background-color: #d2322d;
}

.dialog-header-wait {
    background-color: #428bca;
}

.dialog-header-notify {
    background-color: #eeeeee;
}

.dialog-header-confirm {
    background-color: #333333;
}

.dialog-header-error span, .dialog-header-error h4,
.dialog-header-wait span, .dialog-header-wait h4,
.dialog-header-confirm span, .dialog-header-confirm h4 {
    color: #ffffff;
}

.hls-search-box {
    padding: 15px;
}

.hls-search-box .row {
    padding-top: 20px;
    margin: 0 !important;
}

.hls-search-box p {
    color: #ffffff;
    padding: 15px;
}